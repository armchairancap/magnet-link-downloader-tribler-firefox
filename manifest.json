{
    "manifest_version": 2,
    "name": "Magnet Links Downloader for Tribler API (Firefox Extension)",
    "description": "Download selected Magnet links using Tribler API.",
    "version": "1.0",

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"]
        }
    ],
    "permissions": [
        "contextMenus",
        "webRequest", 
        "menus",
        "scripting",
        "activeTab",
        "<all_urls>"
    ]
}
